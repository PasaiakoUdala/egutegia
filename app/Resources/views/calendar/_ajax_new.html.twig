<div class="row">
    <div class="col-md-1">&nbsp;</div>
    <div class="col-md-8">
        {{ form_start(form) }}
        {#{{ form_start(form, {'action': path('admin_calendar_new', { 'username': username } ), 'method': 'GET'}) }}#}
        {{ form_errors(form) }}

        <div class="row">
            <div class="form-group">
                <div class="col-sm-4">
                    <label for="min-date" class="col-sm-4 control-label">{{ 'Izena' | trans }}</label>
                </div>
                <div class="col-sm-8">
                    {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <div class="col-sm-4">
                    <label for="min-date" class="col-sm-4 control-label">{{ 'Txantiloia' | trans }}</label>
                </div>
                <div class="col-sm-8">
                    {{ form_widget(form.template, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <div class="col-sm-4">
                    {{ form_label(form.year, null, {'label_attr': {'class': 'control-label col-sm-4'}}) }}
                </div>
                <div class="col-sm-8">
                    {{ form_widget(form.year, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="form-group">
                <div class="col-sm-4">
                    {{ form_label(form.hoursYear, null, {'label_attr': {'class': 'control-label col-sm-4'}}) }}
                </div>
                <div class="col-sm-8">
                    {{ form_widget(form.hoursYear, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <div class="col-sm-4">
                    {{ form_label(form.hoursFree, null, {'label_attr': {'class': 'col-sm-4'}}) }}
                </div>
                <div class="col-sm-8">
                    {{ form_widget(form.hoursFree, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <div class="col-sm-4">
                    {{ form_label(form.hoursSelf, null, {'label_attr': {'class': 'col-sm-4'}}) }}
                </div>
                <div class="col-sm-8">
                    {{ form_widget(form.hoursSelf, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <div class="col-sm-4">
                    {{ form_label(form.hoursCompensed, null, {'label_attr': {'class': 'col-sm-4'}}) }}
                </div>
                <div class="col-sm-8">
                    {{ form_widget(form.hoursCompensed, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <div class="col-sm-4">
                    {{ form_label(form.percentYear, null, {'label_attr': {'class': 'col-sm-4'}}) }}
                </div>
                <div class="col-sm-8">
                    {{ form_widget(form.percentYear, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <div class="col-sm-4">
                    {{ form_label(form.hoursDay, null, {'label_attr': {'class': 'col-sm-4'}}) }}
                </div>
                <div class="col-sm-8">
                    {{ form_widget(form.hoursDay, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
        </div>


        <div style="display: none;">
            {{ form_end(form) }}
        </div>
    </div>
    <div class="col-md-1">&nbsp;</div>
</div>
