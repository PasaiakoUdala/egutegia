<div class="row">
    <div class="col-lg-12">
        <table class="table table-hover table-condensed table-bordered">
            <thead>
            <tr>
                <th>Langilea</th>
                <th>Lanpostua</th>
                {% for i in 1..egunak %}
                    <th style="width: 40px !important;">{{ i < 10 ? '0' ~ i : i }}</th>
                {% endfor %}
            </tr>
            </thead>
            <tbody>
            {% for r in results if r.hilabetea == hilabetea and r.urtea == year %}
                <tr>
                    <td data-userid="{{ r.user.id }}">{{ r.user.displayname }}</td>
                    <td>{{ r.user.lanpostua }}</td>
                    {% for i in 1..egunak %}
                        {% set dayKey = 'day' ~ (i < 10 ? '0' ~ i : i) %}
                        {% set day = attribute(r, dayKey) %}
                        <td class="text-center" {% if day|last == '#' %} style="background-color: #bd45b0" {% endif %}>
                            {% if sailburuak %}
                                <span></span>
                            {% else %}
                                <span data-toggle="tooltip" data-placement="top" title="{{ day }}">{{ day|split(' => ')[0] }}</span>
                            {% endif %}

                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
