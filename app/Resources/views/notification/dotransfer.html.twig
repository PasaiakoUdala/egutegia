{% extends 'base.html.twig' %}

{% block content_div_start %}{% endblock %}
{% block content_div_end %}{% endblock %}
{% block headline %}{{ 'Jakinazpenak transferitu' | trans }}{% endblock %}

{% block content_row %}
    <div class="col-md-2"></div>
    <div class="col-md-8">

        {% if errors is defined and errors|length > 0 %}
            <div class="alert alert-warning">
                <p>Prozesua amaitu da, baina erroreak egon dira.</p>
            </div>

            <ul>
                {% for e in errors %}
                    <li>{{ e }}</li>
                {% endfor %}
            </ul>
        {% else %}
            <p>Prozesua ongi amaitu da.</p>
        {% endif %}

        {% if stats is defined %}
            <hr>
            <ul>
                <li>Total: {{ stats.total }}</li>
                <li>Transferituak: {{ stats.moved }}</li>
                <li>Saltatuak (firma gabe): {{ stats.skipped_no_firma }}</li>
                <li>Firmadet eguneratuak: {{ stats.updated_firmadet }}</li>
            </ul>
        {% endif %}

    </div>
    <div class="col-md-2"></div>
{% endblock %}
